<resources>
    <!-- Base application theme -->
    <style name="Theme.SenseiAM" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="android:colorBackground">@color/turquoise_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonStyle">@style/AppButton</item>
    </style>

    <!-- Button style -->
    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/turquoise_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Styles for different button shades -->
    <style name="AppButton.Light" parent="AppButton">
        <item name="android:backgroundTint">@color/turquoise_light</item>
    </style>

    <style name="AppButton.Dark" parent="AppButton">
        <item name="android:backgroundTint">@color/turquoise_dark</item>
    </style>
</resources>
